<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_zhengjia"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_zjgc"
            android:src="@drawable/zhengjiaguangchang"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <Button
                android:onClick="B1"
                android:text="@string/B1"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <Button
                android:onClick="F1"
                android:text="@string/F1"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <Button
                android:onClick="F2"
                android:text="@string/F2"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <Button
                android:onClick="F3"
                android:text="@string/F3"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <Button
                android:onClick="F4"
                android:text="@string/F4"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <Button
                android:onClick="F5"
                android:text="@string/F5"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <Button
                android:onClick="F6"
                android:text="@string/F6"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <Button
                android:onClick="F7"
                android:text="@string/F7"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>